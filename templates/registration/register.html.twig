{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <h1>Registration</h1>

    {% form_theme registrationForm 'form/error_class_form.html.twig' %}

    {{ form_start(registrationForm) }}
    {{ form_errors(registrationForm) }}

    <div class="form-group">
        {{ form_label(registrationForm.username, 'Enter username') }}
        <input
                name="{{ field_name(registrationForm.username) }}"
                value="{{ field_value(registrationForm.username) }}"
                placeholder="{{ field_label(registrationForm.username) }}"
                class="form-control"
        />
        <div class="form-error">
            {{ form_errors(registrationForm.username) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.plainPassword.first, 'Enter password') }}
        <input
                type="password"
                name="{{ field_name(registrationForm.plainPassword.first) }}"
                value="{{ field_value(registrationForm.plainPassword.first) }}"
                placeholder="{{ field_label(registrationForm.plainPassword.first) }}"
                class="form-control"
        />
        {{ form_label(registrationForm.plainPassword.second, 'Enter password') }}
        <input
                type="password"
                name="{{ field_name(registrationForm.plainPassword.second) }}"
                value="{{ field_value(registrationForm.plainPassword.second) }}"
                placeholder="{{ field_label(registrationForm.plainPassword.second) }}"
                class="form-control"
        />
        <div class="form-error">
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
    </div>

    {{ form_widget(registrationForm) }}

    <p style="margin-top: 20px">
        <button class="btn btn-outline-primary">{{ button_label|default('Register') }}</button>
    </p>
    {{ form_end(registrationForm) }}
{% endblock %}


