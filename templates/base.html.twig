<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome to AgroNote!{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" lang="en" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" lang="en" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_index') }}">AgroNote BETA</a>

        <div class="my-2 my-lg-0">
            {% if is_granted("ROLE_USER") %}
                Hi {{ app.user.username }} <a href="{{ path('app_logout') }}" style="color: #3b82f6">Logout</a>
            {% else %}
                <a href="{{ path('app_login') }}" style="color: #3b82f6">Login</a>
            {% endif %}

        </div>
    </nav>

    <div class="row">
        <div class="col">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>

</body>
</html>
